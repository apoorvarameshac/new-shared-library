@Library('common-lib@main') _

pipeline {
    agent any
    
    stages {
        
	stage('Build Docker Image') {
            steps {
                    buildApp()
		}
        }

        stage('Test In Container') {
            steps {
                    testApp()
                }
        }

        stage('Deploy Container') {
            steps {
                    deployApp()
            }
        }
    }
}

